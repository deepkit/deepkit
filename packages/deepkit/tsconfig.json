{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "commonjs",
    "strict": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "target": "es2017",
    "typeRoots": [
      "node_modules/@types",
      "typings"
    ],
    "types": [
      "quill",
      "highlight",
      "quill-image-resize"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@marcj/angular-desktop-ui": ["node_modules/@marcj/angular-desktop-ui"]
    }
  },
  "include": [
    "src/",
    "typings/",
    "node_modules/@deepkit/*/src/**/*.ts",
    "node_modules/@marcj/angular-desktop-ui/src/**/*.ts"
  ]
}
